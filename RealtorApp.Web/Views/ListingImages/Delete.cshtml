@model RealtorApp.DomainModel.ListingImage

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal">
        <p>
            @Html.DisplayFor(model => model.ImageName)
        </p>

        <p>
            <img src="~/ListingImages/@Model.ListingID/@Model.ImageName" alt="@Model.ImageName" style="max-width:95%" />
        </p>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="hidden" name="listingId" value="@Model.ListingID" />
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a href="/Listings/@Model.ListingID/Images">Back to Images</a>
        </div>
    }
</div>
